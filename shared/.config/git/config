# `core.editor` isn't read when $GIT_EDITOR is set in ~/.exports
[core]
	autocrlf = input
	pager = less -FRSX --tabs=2
# https://cli.github.com/manual/gh_auth_login
[credential "https://github.com"]
	helper = !gh auth git-credential # `!` means run as a script
[credential "https://gist.github.com"]
	helper = !gh auth git-credential
[color]
	ui = always
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[init]
	defaultBranch = main
[push]
	default = simple
[pull]
	rebase = false
	ff = only
[diff]
	color = always
	colorMoved = default
[difftool]
	prompt = false
	trustExitCode = true
# https://code.visualstudio.com/docs/sourcecontrol/overview#_vs-code-as-git-difftool-and-mergetool
[difftool "code"]
	cmd = code --wait --diff $LOCAL $REMOTE
# https://github.com/git/git/blob/master/mergetools/smerge
[difftool "smerge"]
	cmd = smerge difftool $LOCAL $REMOTE
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "code"]
	cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
	trustExitCode = true
[mergetool "smerge"]
	cmd = smerge mergetool $BASE $LOCAL $REMOTE -o $MERGED
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
