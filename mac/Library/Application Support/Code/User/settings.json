{
  "dotfiles.repository": "adamelliotfields/dotfiles",
  "dotfiles.targetPath": "/workspaces/.codespaces/.persistedshare/.dotfiles",
  "dotfiles.installCommand": "/workspaces/.codespaces/.persistedshare/.dotfiles/install",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "'MonoLisa Variable', 'Symbols Nerd Font', 'CaskaydiaCove Nerd Font', Menlo, 'DejaVu Sans Mono', monospace",
  "editor.fontLigatures": "'ss02' on", // set to `true` for ligatures but not cursive
  "editor.fontSize": 20,
  "editor.fontVariations": true, // translate font weight for variable fonts
  "editor.fontWeight": 400,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 1.5, // 0 is 'auto'
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.renderFinalNewline": "on", // this renders a final newline in the editor
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [100],
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "files.enableTrash": false,
  "files.eol": "\n",
  "files.insertFinalNewline": true, // this actually inserts a final newline in the file
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.enable": {
    "*": true,
    "csv": false,
    "markdown": true
  },
  "remoteHub.commitDirectlyWarning": "off",
  "security.workspace.trust.enabled": false,
  "settingsSync.ignoredSettings": ["workbench.colorTheme", "-window.zoomLevel"], // unignore zoom
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/usr/bin/bash",
      "icon": "terminal"
    }
  },
  "terminal.integrated.profiles.osx": {
    "fish": {
      "path": "/usr/local/bin/fish",
      "icon": "terminal"
    }
  },
  "terminal.integrated.scrollback": 9999,
  "vsicons.dontShowNewVersionMessage": true,
  "window.nativeTabs": true, // mac new window tabs
  "window.restoreWindows": "none",
  "workbench.colorTheme": "Dracula Pro",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "window.zoomLevel": 1 // each increment is 20% zoom
}
