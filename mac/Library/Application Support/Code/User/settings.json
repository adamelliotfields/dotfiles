{
  // "dotfiles.repository": "adamelliotfields/dotfiles",
  // "dotfiles.targetPath": "~/.dotfiles",
  // "dotfiles.installCommand": "~/.dotfiles/install.sh",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "'MonoLisa Medium', 'Symbols Nerd Font', 'CaskaydiaCove Nerd Font', Menlo, 'DejaVu Sans Mono', Consolas, monospace",
  "editor.fontLigatures": "'ss02' on", // set to `true` for ligatures but not cursive
  "editor.fontSize": 20,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 1.5, // 0 is 'auto'
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.renderFinalNewline": "on", // this renders a final newline in the editor
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [100],
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      { "scope": "keyword.control.flow.js.jsx", "settings": { "fontStyle": "italic" } }, // "return"
      { "scope": "keyword.control.flow.python", "settings": { "fontStyle": "italic" } } // "return" and "raise"
    ]
  },
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "off",
  "files.enableTrash": false,
  "files.eol": "\n",
  "files.insertFinalNewline": true, // this actually inserts a final newline in the file
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "csv": false
  },
  "jupyter.askForKernelRestart": false,
  "notebook.lineNumbers": "on",
  "python.terminal.activateEnvironment": false,
  "remoteHub.commitDirectlyWarning": "off",
  "security.workspace.trust.enabled": false,
  "settingsSync.ignoredExtensions": ["ms-vscode-remote.remote-wsl"],
  "settingsSync.ignoredSettings": ["workbench.colorTheme"],
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/usr/bin/bash",
      "icon": "terminal"
    }
  },
  "terminal.integrated.profiles.osx": {
    "fish": {
      "path": "/usr/local/bin/fish",
      "icon": "terminal"
    }
  },
  "terminal.integrated.scrollback": 9999,
  "vsicons.dontShowNewVersionMessage": true,
  "window.nativeTabs": true, // mac new window tabs
  "window.restoreWindows": "none",
  "workbench.colorTheme": "GitHub Light",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "window.zoomLevel": 0
}
